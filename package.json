{
  "name": "build-free-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate, without any build pipeline, for practice and teaching purpose.",
  "main": "index.js",
  "scripts": {
    "start": "npm run browsersync",
    "make-index": "node ./bin/makeIndex.js",
    "serve": "npx serve .",
    "browsersync": "npx browser-sync start --server . --files 'src' --no-notify --port 5000",
    "build": "npm run make-index",
    "test": "echo \"Error: no test specified\" && exit 1"
